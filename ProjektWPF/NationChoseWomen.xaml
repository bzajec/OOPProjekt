<Window x:Class="ProjektWPF.NationChoseWomen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektWPF"
        mc:Ignorable="d"
        Title="NationChoseWomen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox Width="100" Height="30" x:Name="cbHomeTeam" />
        <ComboBox Grid.Column="2" Width="100" Height="30" x:Name="cbAwayTeam" />
        <Label Grid.Column="1" Content="VS" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="1" VerticalAlignment="Bottom" Height="20" Content="Next" x:Name="btnNext" Click="btnNext_Click"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" x:Name="btnNationChosen" Click="btnNationChosen_Click"
                Width="50" Height="20" Background="Transparent" Margin="2"/>
    </Grid>
</Window>
